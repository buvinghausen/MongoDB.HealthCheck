<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Title>MongoDB.HealthCheck</Title>
    <Authors>Brian Buvinghausen</Authors>
    <Company>Buvinghausen Solutions</Company>
    <Description>Uses .NET Core 3.1's IHealthCheck interface to call into Mongo DB and run the ping operation to verify connectivity</Description>
    <Copyright>Copyright Â© 2020 Brian Buvinghausen</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/buvinghausen/MongoDB.HealthCheck/blob/master/README.md</PackageProjectUrl>
    <PackageTags>MongoDB;HealthCheck</PackageTags>
    <RepositoryUrl>https://github.com/buvinghausen/MongoDB.HealthCheck</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="3.1.0" />
    <PackageReference Include="MongoDB.Driver" Version="2.3.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>

</Project>
