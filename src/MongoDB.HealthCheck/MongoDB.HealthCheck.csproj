<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<WarningsAsErrors />
		<Title>MongoDB.HealthCheck</Title>
		<Authors>Brian Buvinghausen</Authors>
		<Company>Buvinghausen Solutions</Company>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.0.0-preview3</Version>
		<Description>Uses .NET Core 2.2's new IHealthCheck interface to call into Mongo DB and run the dbstats operation to verify connectivity</Description>
		<Copyright>Copyright © 2018 Brian Buvinghausen</Copyright>
		<PackageLicenseUrl>https://github.com/buvinghausen/MongoDB.HealthCheck/blob/master/LICENSE</PackageLicenseUrl>
		<PackageReleaseNotes>Initial release based on .NET Core 2.2 Preview 3</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/buvinghausen/MongoDB.HealthCheck/blob/master/README.md</PackageProjectUrl>
		<PackageTags>MongoDB;HealthCheck</PackageTags>
		<RepositoryUrl>https://github.com/buvinghausen/MongoDB.HealthCheck</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="2.2.0-preview3-35497" />
		<PackageReference Include="MongoDB.Driver" Version="2.3.0" />
	</ItemGroup>

</Project>
